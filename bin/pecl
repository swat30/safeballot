#!/bin/sh

# first find which PHP binary to use
if test "x$PHP_PEAR_PHP_BIN" != "x"; then
  PHP="$PHP_PEAR_PHP_BIN"
else
  if test "/Applications/MAMP/bin/php5/bin/php" = '@'php_bin'@'; then
    PHP=php 
  else
    PHP="/Applications/MAMP/bin/php5/bin/php"
  fi
fi

# then look for the right pear include dir
if test "x$PHP_PEAR_INSTALL_DIR" != "x"; then
  INCDIR=$PHP_PEAR_INSTALL_DIR
  INCARG="-d include_path=$PHP_PEAR_INSTALL_DIR"
else
  if test "/Users/mini/Documents/workspace/Trunk/core/PEAR" = '@'php_dir'@'; then
    INCDIR=`dirname $0`
    INCARG=""  
  else
    INCDIR="/Users/mini/Documents/workspace/Trunk/core/PEAR"
    INCARG="-d include_path=/Users/mini/Documents/workspace/Trunk/core/PEAR"
  fi
fi

exec $PHP -C -n -q $INCARG -d output_buffering=1 -d variables_order=EGPCS -d safe_mode=0 -d register_argc_argv="On" $INCDIR/peclcmd.php "$@"
