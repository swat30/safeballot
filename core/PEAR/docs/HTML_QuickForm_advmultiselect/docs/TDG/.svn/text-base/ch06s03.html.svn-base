    <div class="sect1" lang="en" xml:lang="en">
      <div class="titlepage">
        <h2 class="title c1">
          <a name="developers.buttons" id="developers.buttons"></a>Buttons
        </h2>
      </div>
      <div class="toc">
        <dl>
          <dt>
            <span class="sect2"><a href=
            "ch06s03.html#id4784523">Introduction</a></span>
          </dt>
          <dt>
            <span class="sect2"><a href=
            "ch06s03.html#id4785751">Appearance</a></span>
          </dt>
